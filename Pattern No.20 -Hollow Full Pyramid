#include <stdio.h>
#include <math.h>
#include <string.h>
#include <stdlib.h>
int main(){//Hollow Full Pyramid
    int n=5;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n-i;j++){
            printf(" ");
        }
        for(int j=1;j<=i;j++){
            if(j==1 || j==i || i==1 || i==n){
                printf("* ");
            }
            else{
                printf("  ");
            }
        }
        printf("\n");
    }
    return 0;
}
